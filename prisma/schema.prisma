generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id              String         @id @default(uuid())
  codigo          String         @unique
  descripcion     String
  unidadVenta     UnidadVenta
  subcategoriaId  String // Ahora es obligatorio y único
  subcategoria    Subcategoria   @relation(fields: [subcategoriaId], references: [id])
  confUnidadVenta String
  infoAdicional   String?
  estado          EstadoRegistro
  foto            String?
  moneda          Moneda
  valorVenta      Float
  tasaImpuesto    Float
  precioVenta     Float
  createdAt       DateTime       @default(now())
  stockRegistro   Stock?
}

model Categoria {
  id            String         @id @default(uuid())
  nombre        String
  icon          String
  descripcion   String
  foto          String?
  estado        EstadoRegistro
  subcategorias Subcategoria[]
  createdAt     DateTime       @default(now())
}

model Subcategoria {
  id          String         @id @default(uuid())
  nombre      String
  icon        String
  descripcion String
  foto        String?
  estado      EstadoRegistro
  categoriaId String
  categoria   Categoria      @relation(fields: [categoriaId], references: [id])
  productos   Producto[]
  createdAt   DateTime       @default(now())
}

enum UnidadVenta {
  CJA
  PAQ
  BOL
  BOT
  BARn
  SCH
}

enum EstadoRegistro {
  A
  I
}

enum TipoCategoria {
  C // Categoría
  S // Subcategoría
}

enum Moneda {
  PEN
  USD
  EUR
}

model Empresa {
  id           String         @id @default(uuid())
  ruc          String
  nombre       String
  direccion    String
  codigoUbigeo String
  estado       EstadoRegistro
  clientes     Cliente[]
  createdAt    DateTime       @default(now())
}

model Cliente {
  id              String         @id @default(uuid())
  nombres         String
  apellidoPaterno String
  apellidoMaterno String
  celular         String
  email           String
  estado          EstadoRegistro
  empresaId       String
  empresa         Empresa        @relation(fields: [empresaId], references: [id])
  createdAt       DateTime       @default(now())
}

model Stock {
  id                String   @id @default(uuid())
  productoId        String   @unique
  producto          Producto @relation(fields: [productoId], references: [id])
  stockComprometido Int      @default(0)
  stockFisico       Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum SignoOperacion {
  MAS // +
  MENOS // -
}
